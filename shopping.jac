with entry {
    total = 0;
    names = [];
    prices = [];

    while true {
        name = input("ğŸ’– Enter item name (or type 'done' to finish): ");

        if name == "done" {
            break;
        }

        price = input("   Enter price for '" + name + "' in Ksh: ");

        # convert price to integer (assumes you type a valid number)
        p = int(price);

        names.append(name);
        prices.append(p);
        total = total + p;
    }

    print("\nğŸ§¾ Your Shopping Receipt:");
    for i in range(0, len(names)) {
        print("   â€¢ ", names[i], ": Ksh", prices[i]);
    }
    print("------------------------");
    print("âœ¨ Total: Ksh", total);
}
